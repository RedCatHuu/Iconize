<%= render 'layouts/frame', type: :narrow do %>
  <h4 class="text-center border-title" style="line-height: 40px">本当に<br><strong><%= @user.name %></strong>さんのアカウントを<br><%= @way_ja %>にしますか？</h4>
  
  <div class="d-flex-wrap">
    <div class="mr-auto">
      <%= link_to '戻る', admin_user_path(@user), class: "btn btn-outline-secondary" %>
    </div>
    <% case @way %>
    <% when "invalidate" %>
      <div>
        <%= link_to 'アカウントの無効', admin_user_path(@user.id), method: :patch, data: {confirm: "本当に無効にしますか？"}, class: "btn btn-danger" %>
      </div>
    <% when "validate" %>
      <div>
        <%= link_to 'アカウントの有効', admin_user_path(@user.id), method: :patch, data: {confirm: "本当に有効にしますか？"}, class: "btn btn-success" %>
      </div>
    <% when "destroy" %>
      <span>
        <%= link_to 'アカウントの削除', admin_user_path(@user.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>/
      </span>
    <% end %> 
  </div>
<% end %>