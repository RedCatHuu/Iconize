<table>
  <tbody>
    <% club.club_comments.each do |club_comment| %>
      <tr>
        <td style="padding-top: 20px;">
          <%= link_to user_path(club_comment.user_id) do %>
            <%= image_tag club_comment.user.get_profile_image(70, 70), class: "rounded-circle" %><br>
            <%= club_comment.user.name %>
          <% end %>
        </td>
        <td style="padding: 20px 20px 0 20px">
          <%= club_comment.comment %>
        </td>
        
      </tr>
      <tr>
        <% unless admin_signed_in? %>
          <% if club_comment.user_id == current_user.id || club.owner_id %>
            <td style="width: 48px">
              <%= link_to '削除', club_club_comment_path(club_id: club.id, id: club_comment.id), remote: true, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-secondary btn-sm" %>
            </td>
          <% end %>
        <% end %>
        <td colspan="3">
          <%= club_comment.y_to_m %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>