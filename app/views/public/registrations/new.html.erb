<%= render "layouts/frame", type: "session" do %>
  
  <%= form_with model: resource, url: registration_path(resource_name) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <h4 align="center">サインアップ</h4>
    <div class="field">
      <%= f.label :name, "ニックネーム" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      (最低<%= @minimum_password_length %>文字入力してください)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    
    <div class="actions mt-4">
      <%= f.button :type => "submit", class: "btn btn-outline-info btn-block" do %>
        <i class="fa-solid fa-user"></i>　新規登録
      <% end %>
    </div>
  <% end %>
  
<% end %>