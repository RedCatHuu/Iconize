<% if work.favorited_by?(current_user) %>
  <p>
    <%= link_to work_favorites_path(work), remote: true, method: :delete do %>
      <i class="fa-solid fa-heart" style="color: #ff6055;"></i>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to work_favorites_path(work), remote: true, method: :post do %>
      <i class="fa-regular fa-heart"></i>
    <% end %>
  </p>
<% end %>