<div class="container">
  <div class="row">
    
    <div class="col-2">
      <p><%= @club.name %></p>
      
      <p>
        サークル作成者:<%= @owner.name %><br>
        メンバー数:<%= link_to member_club_path do %>
                     <%= @club.users.count %>
                   <% end %><br>
        作品数:<%= @club.works.count %>
      </p>
    </div>
    <div class="col-7">
      <p class="mt-5"><%= @club.introduction %></p>
    </div>
    <div class="col-auto mt-5">
      <% if current_user == @owner %>
        <%= link_to 'サークル情報の編集', edit_club_path %><br>
        <%= link_to '承認待ち一覧', permit_club_path(@club) %><br>
        <%= link_to '作品投稿', new_work_path(club_id: @club.id) %>
      <% elsif @club.users.exists?(id: current_user.id) %>
        <%= link_to '退出', leave_club_path %><br>
        <%= link_to '作品投稿', new_work_path(club_id: @club.id) %>
      <% elsif @club.permits.exists?(user_id: current_user.id) %>
        <%= link_to '申請取消', club_permits_path(@club), method: :delete %>
      <% else %>
        <%= link_to '加入申請', club_permits_path(@club), method: :post %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      
      <ul class="tab-menu">
        <li><a href="#works" class="active">サークルの作品</a></li>
        <li><a href="#community">コミュニティ</a></li>
      </ul>
  
      <div class="tab-contents">
        
        <div id="works" class="tab1 area active">
          <%= render 'shared/works', works: @club.works, name: false %>
        </div>
        
        <div id="community" class="tab2 area">
          
          <div id="club-comments">
            <%= render 'public/club_comments/club_comment', club: @club %>
          </div>
          <div id="club-comment-form">
            <%= form_with model: [@club, ClubComment.new], local: false, method: :post do |f| %>
              <%= f.text_area :comment, style: "width: 100%;", rows: '5', class: "comment_textarea" %>
              <%= f.submit "送信" %>
            <% end %>
          </div>
        </div>
        
      </div>
      
    </div>
  </div>
  
  <p>こっちはbootstrap</p>
  <div class="row">
    <div class="col">
      
      <div class="tabs">
        
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tab1">セクション1</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab2">セクション2</a>
          </li>
        </ul>
        
        <div class="tab-content">
          
          <div id="tab1" class="tab-pane fade show active">
            <%= render 'shared/works', works: @club.works, name: false %>
          </div>
          
          <div id="tab2" class="tab-pane fade show">
            <div id="-comments">
              <%= render 'public/club_comments/club_comment', club: @club %>
            </div>
            
            <div id="club-comment-form">
              <%= form_with model: [@club, ClubComment.new], local: false, method: :post do |f| %>
                <%= f.text_area :comment, style: "width: 100%;", rows: '5', class: "comment_textarea" %>
                <%= f.submit "送信" %>
              <% end %>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
  
</div>
  