<%= render 'layouts/frame' do %>

  <h2>作品投稿</h2>
  <%= form_with model: Work.new do |f| %>
    <div>
      <%= f.label :base_image, 'ベース画像' %><br>
      <%= f.file_field :base_image %>
    </div>
    <div>
      <%= f.label :images, 'アイテム画像' %><br>
      <%= f.file_field :images %>
    </div>
    <div>
      <%= f.label :name, '作品名' %><br>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :caption, 'キャプション' %><br>
      <%= f.text_area :caption, class:"form-control", size: "1x5" %>
    </div>
  <% end %>

<% end %>